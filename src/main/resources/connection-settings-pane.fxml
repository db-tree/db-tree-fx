<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox prefHeight="818.0" prefWidth="564.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.vzhilin.dbtree.ui.settings.ConnectionSettingsController">
   <children>
      <TitledPane text="JDBC Settings" VBox.vgrow="NEVER">
         <content>
            <GridPane hgap="5.0" vgap="5.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="180.0" minWidth="10.0" prefWidth="120.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints fillHeight="false" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints />
               </rowConstraints>
               <children>
                  <Label fx:id="textLabel" text="Connection name" BorderPane.alignment="CENTER_LEFT" />
                  <TextField fx:id="connectionName" GridPane.columnIndex="1" />
                  <Label text="Driver class" GridPane.rowIndex="1" />
                  <Label text="JDBC Url" GridPane.rowIndex="2" />
                  <Label text="Username" GridPane.rowIndex="3" />
                  <Label text="Password" GridPane.rowIndex="4" />
                  <Label text="Schemas" GridPane.rowIndex="5" />
                  <Label text="Table name pattern" GridPane.rowIndex="6" />
                  <Label fx:id="testMessageLabel" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                  <ComboBox fx:id="driverClass" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="jdbcUrl" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <TextField fx:id="schemas" promptText="default" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <TextField fx:id="tableNamePattern" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                  <Button fx:id="connectButton" mnemonicParsing="false" onAction="#onTestButton" prefHeight="25.0" prefWidth="125.0" text="Connect" GridPane.rowIndex="7" />
               </children>
            </GridPane>
         </content>
      </TitledPane>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
          <Tab text="Search">
            <content>
                  <TreeTableView fx:id="lookupTreeView" layoutX="34.0" layoutY="14.0" prefHeight="200.0" prefWidth="200.0" />
            </content>
          </Tab>
          <Tab text="String">
            <content>
                  <TableView fx:id="templateTable" prefHeight="400.0" />
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</VBox>
